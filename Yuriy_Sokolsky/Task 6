function largest() {
  var max = arguments[0];
  for (var i = 0; i < arguments.length; i++) {
    max = arguments[i] > max ? arguments[i] : max;
  }
  return max;
}

function smallest() {
  var min = arguments[0];
  for (var i = 0; i < arguments.length; i++) {
    min = arguments[i] < min ? arguments[i] : min;
  }
  return min;
}

console.log(largest(2, 0.1, -5, 100, 3));
console.log(smallest(2, 0.1, -5, 100, 3));
/*result::
  100
  -5
*/
